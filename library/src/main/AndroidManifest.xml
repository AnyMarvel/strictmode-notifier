<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nshmura.strictmodenotifier">

  <application>

    <service android:name=".internal.LogWatchService"/>

    <activity
        android:name=".internal.StrictModeReportActivity"
        android:enabled="false"
        android:icon="@drawable/strictmode_notifier_ic_launcher"
        android:label="@string/strictmode_notifier_app_name"
        android:taskAffinity="com.nshmura.strictmodenotifier"
        android:theme="@style/StrictModeNotifier.AppTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".internal.StrictModeReportDetailActivity"
        android:theme="@style/StrictModeNotifier.AppTheme"/>

  </application>

</manifest>
